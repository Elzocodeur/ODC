#ifndef dessin1
#define dessin1
        // Déclaration des fonctions fictives de la bibliothèque graphique
        void drawTriangle(int size, const char *color);
        void drawSquare(int size, const char *color);
        void setColor(const char *color);
        void blinkShape(int size, const char *color);

